@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" style="height: 65vh">
    <h1 class="display-4 mb-5">Bienvenido al Sistema de Gestion de Pedidos</h1>
    
    @if (Context.Session.GetString("RolUsuarioLogueado") == "Admin")
    {
        
        <div class="d-flex justify-content-center row col-8 mx-auto offset-1" style="border-radius: 15px; height: 90%; box-shadow: 0 10px 15px rgba(0, 0, 0, 0.4); overflow:hidden">
            <div class="bg-primary d-flex align-items-center justify-content-center"><h3 class="text-light">¿Que desea hacer?</h3></div>
            <a class="btn btn-primary my-2 mt-4 col-9 d-flex align-items-center justify-content-center" asp-controller="Usuario" asp-action="Index">Gestion de Usuarios</a>
            <a class="btn btn-primary my-2 col-9 d-flex align-items-center justify-content-center" asp-controller="Cliente" asp-action="Index">Gestion de Clientes</a>
            <a class="btn btn-primary my-2 col-9 d-flex align-items-center justify-content-center" asp-controller="Articulo" asp-action="Index">Gestion de Articulos</a>
            <a class="btn btn-primary my-2 mb-4 col-9 d-flex align-items-center justify-content-center" asp-controller="Pedido" asp-action="Index">Gestion de Pedidos</a>
        </div>

    }
    
</div>
