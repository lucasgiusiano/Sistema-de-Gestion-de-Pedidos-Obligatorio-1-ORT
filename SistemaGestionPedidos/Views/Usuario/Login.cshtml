@{
    ViewData["Title"] = "Login";
}

@if(!String.IsNullOrEmpty(ViewBag.Error)){
    <div class="alert alert-danger d-flex align-items-center justify-content-between mx-auto" role="alert" style="position: fixed; top: 10%; left: 50%; transform: translate(-50%, -50%);">
        <div class="mx-3">
            @ViewBag.Error
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>Login</h1>

<h4>Inicie Sesion</h4>
<hr />
<div class="row">
    <div class="col-md-3 mx-auto">
        <form asp-action="Login">
            <div class="form-group">
                <label for="correo">Correo*</label>
                <input name="email" type="email" class="form-control" id="correo" placeholder="alguien@correo.com" required>
            </div>
            <div class="form-group">
                <label for="nombre">Contraseña*</label>
                <input name="password" type="password" class="form-control" id="nombre" placeholder="*********" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Iniciar Sesión" class="btn btn-primary col-12 mt-2" />
            </div>
        </form>
    </div>
</div>