@model IEnumerable<DTOs.DTOs_Articulo.DTOAltaArticulo>

@{
	ViewData["Title"] = "Index";
}

@if (!String.IsNullOrEmpty(ViewBag.Error))
{
	<div class="alert alert-danger d-flex align-items-center justify-content-between mx-auto" role="alert" style="position: fixed; top: 10%; left: 50%; transform: translate(-50%, -50%);">
		<div class="mx-3">
			@ViewBag.Error
		</div>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<h1 class="text-center">Gestion de Articulos</h1>

<p>
	<a class="btn btn-success" href="@Url.Action("Index", "Home")">Volver</a>
	@if (Context.Session.GetString("RolUsuarioLogueado") == "Admin")
	{
		<a class="btn btn-success" href="@Url.Action("Create", "Articulo")">Nuevo Articulo</a>
	}
</p>
<table class="table" style="border-radius: 15px; overflow:hidden;  box-shadow: 0 10px 15px rgba(0, 0, 0, 0.3);">
	<thead class="bg-primary">
		<tr class="text-center text-light">
			<th>
				@Html.DisplayNameFor(model => model.Nombre)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Descripcion)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CodigoProveedor)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PrecioVenta)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Stock)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody class="text-center">
			@foreach (var item in Model)
			{
			<tr >
				<td>
						@Html.DisplayFor(modelItem => item.Nombre)
				</td>
				<td>
						@Html.DisplayFor(modelItem => item.Descripcion)
				</td>
				<td>
						@Html.DisplayFor(modelItem => item.CodigoProveedor)
				</td>
				<td>
						@Html.DisplayFor(modelItem => item.PrecioVenta)
				</td>
				<td>
						@Html.DisplayFor(modelItem => item.Stock)
				</td>
				<td>
					@if (Context.Session.GetString("RolUsuarioLogueado") == "Admin")
					{
						<a class="btn btn-primary" href="@Url.Action("Edit", "Articulo", new {id = item.Id})">Editar</a>
					}
				</td>
			</tr>
			}
	</tbody>
</table>
